<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
    <fieldset>
      <legend></legend>

        <div class="field form-group">
          <%= f.label :email, class: "col-lg-2 control-label input-lg" %><br>
          <div class="col-lg-10">
            <%= f.email_field :email, { class: "form-control input-lg", autofocus: true } %>
          </div>
        </div>

        <div class="field form-group">
          <div class="col-lg-10 input-lg col-lg-offset-2">
            <div><%= f.submit "Send me reset password instructions", class: "btn btn-success btn-lg" %></div>
          </div>
        </div>

    </fieldset>
<% end %>
