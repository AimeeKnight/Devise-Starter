<div class="row">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :email, class: "col-lg-2 control-label input-lg" %><br />
        <div class="col-lg-10 input-lg">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :password, class: "col-lg-2 control-label input-lg" %><br />
        <div class="col-lg-10 input-lg">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, class: "col-lg-2 control-label input-lg" %><br />
        <div class="col-lg-10 input-lg">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="col-lg-10 input-lg col-lg-offset-2">
          <div><%= f.submit "Sign up", class: "btn btn-success btn-lg" %></div>
        </div>
      </div>

    </fieldset>
  <% end %>

  <br />
</div>
