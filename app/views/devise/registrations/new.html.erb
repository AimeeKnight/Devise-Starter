<div class="row">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <fieldset>
      <legend></legend>

      <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :email, class: "col-lg-2 control-label input-lg" %><br />
          <div class="col-lg-10">
            <%= f.email_field :email, { class: "form-control input-lg", autofocus: true } %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: "col-lg-2 control-label input-lg" %><br />
          <div class="col-lg-10">
            <%= f.password_field :password, { class: "form-control input-lg", autocomplete: "off" } %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, class: "col-lg-2 control-label input-lg" %><br />
          <div class="col-lg-10">
            <%= f.password_field :password_confirmation, { class: "form-control input-lg", autocomplete: "off" } %>
          </div>
        </div>

        <div class="field form-group">
          <div class="col-lg-10 input-lg col-lg-offset-2">
            <div><%= f.submit "Sign up", class: "btn btn-success btn-lg" %></div>
          </div>
        </div>

    </fieldset>
  <% end %>

  <br />
</div>
