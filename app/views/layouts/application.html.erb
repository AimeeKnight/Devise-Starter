<!DOCTYPE html>
<html>
<head>
  <title>Code Club - Blogament</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Home", main_app.root_path, class: "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Posts", blogament.posts_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%if user_signed_in? %>
          <li>
          <%= link_to('Logout', main_app.destroy_user_session_path, :method => :delete) %>
          </li>
        <% else %>
          <li>
          <%= link_to('Login', main_app.new_user_session_path)  %>  
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li>
          <%= link_to('Edit registration', main_app.edit_user_registration_path) %>
          </li>
        <% else %>
          <li>
          <%= link_to('Register', main_app.new_user_registration_path)  %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="container">

    <%= yield %>

  </div>

</body>
</html>
